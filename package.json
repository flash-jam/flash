{
  "name": "flash",
  "packageManager": "bun@1.1.30",
  "private": true,
  "scripts": {
    "all:up": "concurrently \"bun run --filter '*' db\" \"bun run --filter '*' watch\" \"bun run --filter '*' dev\"",
    "db:up": "concurrently \"bun run --filter '*' db\" \"bun run --filter '*' watch\"",
    "server:up": "bun run --filter @flash/server dev",
    "web:up": "bun run --filter @flash/web dev"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
