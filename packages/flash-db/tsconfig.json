{
  "extends": "@flash/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2020",
    // Enable latest features
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "verbatimModuleSyntax": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
